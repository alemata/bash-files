alias ss="cd $CITRUSBYTE_HOME/shutterstock"
alias easel="cd $CITRUSBYTE_HOME/shutterstock/easel"
alias emp="cd $CITRUSBYTE_HOME/shutterstock/easel-media-processor"
alias beta="cd $CITRUSBYTE_HOME/shutterstock/beta-access"

## Own projects ##
PROJECTS="~/Code"
alias ork="cd $PROJECTS/ork"

## Pulpou  ##
PULPOU_HOME="~/Code/pulpou"
